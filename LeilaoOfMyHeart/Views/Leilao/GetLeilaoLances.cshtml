@model IEnumerable<TF_PSA.PL.Lance>

@{
    ViewData["Title"] = "Lances";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leilao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Leilao.LeilaoId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LanceId">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.LanceId">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.LanceId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
