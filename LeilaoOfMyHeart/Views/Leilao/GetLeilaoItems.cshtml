@model IEnumerable<TF_PSA.PL.Item>

@{
    ViewData["Title"] = "Lote";
}

<div style="padding-left: 5%">
    <h1 class="pb-4 pt-3">Leilões</h1>
        <div class="card-columns d-flex flex-wrap">
            @foreach (var item in Model)
            {
                <div class="card" style="width: 30%">
                    <div class="card-body">
                        <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Imagem)" style="height:100px; width:300px;"/>
                        <div class="d-flex align-content-center align-items-center justify-content-between">
                          <h4 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h4>
                            <div class="badge badge-secondary m-1">@Html.DisplayFor(modelItem => item.Categoria)</div>
                        </div>

                        <div class="card-text">
                            @Html.DisplayFor(modelItem => item.DescricaoCompleta)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

