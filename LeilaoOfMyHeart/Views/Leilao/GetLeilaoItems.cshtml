@model IEnumerable<TF_PSA.PL.Item>

@{
    ViewData["Title"] = "Lote";
}

<h1 class="pb-4 pt-3">Itens do Leilão</h1>
    <div class="d-flex flex-wrap">
        @foreach (var item in Model)
        {
            <div class="m-3 p-3 media bg-light w-100">
                <img class="d-flex mr-3" src="@Html.DisplayFor(modelItem => item.Imagem)" style="width:100px;height:auto;" />
                <div class="media-body">

                    <div class="d-flex align-content-center align-items-center justify-content-between">

                        <h5 class="mt-0">@Html.DisplayFor(modelItem => item.Nome)</h5>
                        <div class="badge badge-secondary m-1">@Html.DisplayFor(modelItem => item.Categoria)</div>
                    </div>
                    @Html.DisplayFor(modelItem => item.DescricaoCompleta)
                </div>
            </div>
        }
    </div>